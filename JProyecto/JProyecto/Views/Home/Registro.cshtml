@model Autenticacion
@{
    Layout = "_LayoutExterno";
}

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background: url(/img/auth-bg.jpg) no-repeat center center;">

    <div class="auth-box">
        <div id="loginform">
            <div class="logo">
                <span class="db"><img src="~/img/logo-icon.png" alt="logo" /></span>
                <h5 class="font-medium m-b-20">Registrar Usuario</h5>
            </div>

            <br />

            <div class="row">
                <div class="col-12">

                    <form class="form-horizontal m-t-20" id="loginform" asp-controller="Home" asp-action="Registro">

                        <input id="Mensaje" type="hidden" value="@ViewBag.Mensaje">

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="ti-id-badge"></i></span>
                            </div>
                            <input type="text" asp-for="Identificacion" class="form-control form-control-lg" placeholder="Identificación"
                            onkeyup="ConsultarNombreAPI()">
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                            </div>
                            <input type="text" asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre Completo">
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="ti-email"></i></span>
                            </div>
                            <input type="email" asp-for="Correo" class="form-control form-control-lg" placeholder="Correo Electrónico">
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon2"><i class="ti-lock"></i></span>
                            </div>
                            <input type="password" asp-for="Contrasenna" class="form-control form-control-lg" placeholder="Contraseña">
                        </div>

                        <div class="form-group text-center">
                            <div class="col-xs-12 p-b-20">
                                <button class="btn btn-block btn-lg btn-info" type="submit">Procesar</button>
                            </div>
                        </div>

                        <div class="form-group m-b-0 m-t-10">
                            <div class="col-sm-12 text-center">
                                Si ya tienes una cuenta <a href="@Url.Action("Index","Home")" class="text-info m-l-5"><b>Inicia Sesión</b></a>
                            </div>
                            <div class="col-sm-12 text-center">
                                Si olvidates tu contraseña <a href="@Url.Action("RecuperarAcceso","Home")" class="text-info m-l-5"><b>Recupera tu acceso</b></a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery.min.js"></script>
<script src="~/js/registro.js"></script>