@model Producto
@{
    Layout = "_Layout";
}

<div class="col-12">
    <div class="card">

        <form class="form-horizontal" asp-controller="Producto" asp-action="ActualizarProducto" enctype="multipart/form-data">
            <div class="card-body">
                <h4 class="card-title">Actuallizar Producto</h4>
                <hr><br />

                <div class="row justify-content-center">
                    <div class="col-md-8">

                        <input id="Mensaje" type="hidden" value="@ViewBag.Mensaje">

                        <input type="hidden" asp-for="IdProducto">

                        <div class="form-group">
                            <label>Nombre:</label>
                            <input type="text" asp-for="Nombre" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Descripción:</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Inventario:</label>
                                    <input asp-for="Inventario" maxlength="5" type="text" class="form-control" onkeypress="permitirSoloNumeros()">
                                </div>
                                <div class="col-md-6">
                                    <label>Precio:</label>
                                    <input asp-for="Precio" maxlength="10" type="text" class="form-control" onkeypress="permitirSoloNumeros()">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-9">
                                    <label>Imagen:</label>
                                    <input type="file" id="ImagenProducto" name="ImagenProducto" accept="image/png" class="form-control">
                                </div>
                                <div class="col-md-3" style="text-align:center">
                                    <img src="@Model.Imagen" width="175" height="175" />
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <hr><br />

            <div class="row">
                <div class="col-md-12 text-right pb-2 pr-4">
                    <button class="btn btn-info" type="submit">Procesar</button>
                </div>
            </div>
        </form>

    </div>
</div>

<script src="~/lib/jquery.min.js"></script>
<script src="~/js/registroProducto.js"></script>