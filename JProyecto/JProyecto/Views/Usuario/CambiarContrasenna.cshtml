@model Autenticacion
@{
    Layout = "_Layout";
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Cambiar Contraseña</h4>
        </div>
        <hr>

        <form class="form-horizontal" id="loginform" asp-controller="Usuario" asp-action="CambiarContrasenna">

            <input id="Mensaje" type="hidden" value="@ViewBag.Mensaje">

            <div class="card-body">
                
                <div class="form-group row">
                    <label for="title1" class="col-sm-3 text-right control-label col-form-label">Contraseña Nueva</label>
                    <div class="col-sm-6">
                        <input type="password" asp-for="Contrasenna" class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="com12" class="col-sm-3 text-right control-label col-form-label">Confirmar Contraseña</label>
                    <div class="col-sm-6">
                        <input type="password" asp-for="ConfirmarContrasenna" class="form-control">
                    </div>
                </div>
                
            </div>
            <hr>
            <div class="card-body">
                <div class="text-right">
                    <button class="btn btn-info" type="submit">Procesar</button>
                </div>
            </div>
        </form>
    </div>
</div>