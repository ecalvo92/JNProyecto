@model List<Autenticacion>
@{
    Layout = "_Layout";
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Consulta de Usuarios</h4>
        </div>
        <hr>

        <input id="Mensaje" type="hidden" value="@ViewBag.Mensaje">

        <div class="card-body">

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Identificación</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdUsuario</td>
                            <td>@item.Identificacion</td>
                            <td>@item.Nombre</td>
                            <td>@item.Correo</td>
                            <td>@item.NombreRol</td>
                            <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                            <td class="text-center">
                                <button class="btn btn-primary btn-sm btnUserModal" data-toggle="modal" data-target="#infoModal"
                                        data-id=@item.IdUsuario
                                        data-rol=@item.IdRol
                                        data-estado=@item.Estado>
                                    Actualizar
                                </button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="infoModal" tabindex="-1" role="dialog" aria-labelledby="infoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="infoModalLabel">Información</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="FormInfoModal">

                    <!-- Switch de estado -->
                    <div class="form-group d-flex align-items-center">
                        <label class="mb-0 mr-2">Estado</label>
                        <label class="toggle-switch mb-0">
                            <input type="checkbox" id="estadoUsuario" name="estadoUsuario">
                            <span class="slider"></span>
                        </label>
                    </div>

                    <!-- Dropdown de roles -->
                    <div class="form-group">
                        <label for="rolUsuario">Rol del usuario</label>
                        <select class="form-control" id="rolUsuario" name="rolUsuario">
                            <option value="1">Usuario Regular</option>
                            <option value="2">Usuario Administrador</option>
                        </select>
                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" data-dismiss="modal">Procesar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery.min.js"></script>
<script>

    $(function () {

        $(document).on("click",".btnUserModal", function(){

          const id = $(this).data('id');
          const rol = $(this).data('rol');
          const estado = $(this).data('estado');

          $('#FormInfoModal').data('id', id);
          $('#FormInfoModal select[name="rolUsuario"]').val(rol.toString());

          const estadoBool = estado.toString().toLowerCase() === 'true';
          $('#estadoUsuario').prop('checked', estadoBool);
        });

    });

</script>